<p id="notice"><%= notice %></p>
<div class="container">
  
<div class="panel panel-default">
  <div class="panel-heading">
    <center>
      <strong>Composição #<%= @quadro.num %> (<%= @quadro.ano %>)</strong>          
      <% if !@quadro.vendido %>
        <span class="label label-success">Disponível</span>
      <% end %>
    </center>
  </div>
  <div class="panel-body ">
    <center>
      <%= link_to(@quadro) do %>
        <%= image_tag @quadro.foto.url(:large), class:"show-image" %>
      <% end %>
    </center>
  </div>
  <div class="panel-footer ">
    <center>
      <%= @quadro.alt %>cm x <%= @quadro.larg %>cm - <%= @quadro.tec %>
      <% if (!@quadro.vendido && @quadro.local != nil ) %>
        <p>
          <%= @quadro.local.desc %>
        </p>
      <% end %>
      <% if @quadro.link %>
        <%= link_to "Ver na Loja", @quadro.link, class: "btn btn-sm btn-success" %>
      <% end %>
    </center>
  </div>
</div>
