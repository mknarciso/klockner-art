<p id="notice"><%= notice %></p>
<div class="container about-body">
  <h1>Locais</h1>
  
  <table class="table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Cidade</th>
        <th>Descrição</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @locals.each do |local| %>
        <tr>
          <td><%= local.name %></td>
          <td><%= local.city %></td>
          <td><%= local.desc %></td>
          <td><%= link_to 'Mostrar', local , class: "btn btn-xs btn-default"%></td>
          <td><%= link_to 'Editar', edit_local_path(local) , class: "btn btn-xs btn-info"%></td>
          <td><%= link_to 'Deletar', local, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-xs btn-danger"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'Novo Local', new_local_path, class: "btn btn-xs btn-success" %>
</div>